@using D12.ChatGPT.WebAdmin.Extension
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - NDO Digital</title>
    <link rel="shortcut icon" href="@Url.Content("~/favicon.ico")" type="image/x-icon" />
    <link rel="icon" href="@Url.Content("~/favicon.ico")" type="image/ico" />
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @RenderSection("Styles", required: false)
    <link href="~/Content/WebApp/Custom.css" rel="stylesheet" />
    @{
        var rootPath = Url.Content("~/");
    }

</head>
<body>
    <div id="container" class="effect aside-float aside-bright mainnav-lg page-fixedbar">

        <!--NAVBAR-->
        <!--===================================================-->
        <header id="navbar">
            <div id="navbar-container" class="boxed">
                <div class="navbar-header">
                    <a href="@Url.Action("Index","Home")" class="navbar-brand">
                        <div class="brand-icon">
                            <img src="~/Content/images/company/logo/headerLogoIcon.png" alt="Logo" />
                        </div>
                        <div class="brand-title">
                            <img src="~/Content/images/company/logo/headerLogo.png" alt="Logo Text" />
                        </div>
                    </a>
                </div>
                <div class="navbar-content">
                    <ul class="nav navbar-top-links">
                        <li class="tgl-menu-btn">
                            <a class="mainnav-toggle" href="#">
                                <i class="fas fa-align-justify"></i>
                            </a>
                        </li>
                        <li>&nbsp;</li>
                    </ul>
                    <ul class="nav navbar-top-links">
                        @using Microsoft.AspNet.Identity
                        @if (Request.IsAuthenticated)
                        {
                            <li id="dropdown-user" class="dropdown">
                                <a href="#" data-toggle="dropdown" class="dropdown-toggle text-right">
                                    <span class="ic-user pull-right">
                                        <img class="img-circle img-user media-object" src="~/Content/images/Demo/profile-photos/1.png" alt="Profile Picture">
                                    </span>
                                    <div class="username hidden-xs">@User.Identity.GetScreenName()</div>
                                </a>
                                <div class="dropdown-menu dropdown-menu-sm dropdown-menu-right panel-default">
                                    <ul class="head-list">
                                        <li>
                                            <a href="#"><i class="fas fa-user-circle fa-2x"></i>&nbsp;&nbsp;Profile</a>
                                        </li>
                                        @using (Html.BeginForm("LogOff", "Account", new { area = "" }, FormMethod.Post, new { id = "logoutForm" }))
                                        {
                                            @Html.AntiForgeryToken()
                                            <li>
                                                <a href="javascript:document.getElementById('logoutForm').submit()">
                                                    <i class="fas fa-sign-out-alt fa-2x"></i>&nbsp;&nbsp; Sign out
                                                </a>
                                            </li>
                                        }
                                    </ul>
                                </div>
                            </li>
                            <li>
                                <a href="#" class="aside-toggle">
                                    <i class="fas fa-ellipsis-v"></i>
                                </a>
                            </li>
                        }
                        <li>&nbsp;</li>
                    </ul>
                </div>
            </div>
        </header>
        <!--===================================================-->
        <!--END NAVBAR-->

        <div class="boxed">

            <!--CONTENT CONTAINER-->
            <!--===================================================-->
            <div id="content-container">
                <!--Page content-->
                <!--===================================================-->
                <div id="page-content" style="margin:10px 0;">


                    <!--Activated Users Chart-->
                    <!--===================================================-->
                    @RenderBody()
                    <!--===================================================-->
                    <!--End Activated Users chart-->

                </div>
                <!--===================================================-->
                <!--End page content-->

            </div>
            <!--===================================================-->
            <!--END CONTENT CONTAINER-->
            <!--ASIDE-->
            <!--===================================================-->
            <aside id="aside-container">
                <div id="aside">
                    <div class="nano">
                        <div class="nano-content">

                        </div>
                    </div>
                </div>
            </aside>
            <!--===================================================-->
            <!--END ASIDE-->
            <!--MAIN NAVIGATION-->
            <!--===================================================-->
            <nav id="mainnav-container">
                <div id="mainnav">


                    <!--OPTIONAL : ADD YOUR LOGO TO THE NAVIGATION-->
                    <!--It will only appear on small screen devices.-->
                    <!--================================
                <div class="mainnav-brand">
                    <a href="index.html" class="brand">
                        <img src="img/logo.png" alt="Nifty Logo" class="brand-icon">
                        <span class="brand-text">Nifty</span>
                    </a>
                    <a href="#" class="mainnav-toggle"><i class="pci-cross pci-circle icon-lg"></i></a>
                </div>
                -->
                    <!--Menu-->
                    <!--================================-->
                    <div id="mainnav-menu-wrap">
                        <div class="nano">
                            <div class="nano-content">

                                <!--Profile Widget-->
                                <!--================================-->
                                <div id="mainnav-profile" class="mainnav-profile">
                                    <div class="profile-wrap text-center">
                                        <div class="pad-btm">
                                            <img class="img-circle img-md" src="~/Content/images/Demo/profile-photos/1.png" alt="Profile Picture">
                                        </div>
                                        <p class="mnp-name">@User.Identity.GetUserName()</p>
                                    </div>
                                    <div id="profile-nav" class="collapse list-group bg-trans">
                                        <a href="#" class="list-group-item">
                                            <i class="demo-pli-male icon-lg icon-fw"></i> View Profile
                                        </a>
                                        <a href="#" class="list-group-item">
                                            <i class="demo-pli-gear icon-lg icon-fw"></i> Settings
                                        </a>
                                        <a href="#" class="list-group-item">
                                            <i class="demo-pli-information icon-lg icon-fw"></i> Help
                                        </a>
                                        <a href="#" class="list-group-item">
                                            <i class="demo-pli-unlock icon-lg icon-fw"></i> Logout
                                        </a>
                                    </div>
                                </div>

                                @Html.MvcSiteMap().Menu("SiteMapMenuLeft")

                            </div>
                        </div>
                    </div>
                    <!--================================-->
                    <!--End menu-->

                </div>
            </nav>
            <!--===================================================-->
            <!--END MAIN NAVIGATION-->

        </div>

        <!-- FOOTER -->
        <!--===================================================-->
        <footer id="footer">
            <div class="hide-fixed pull-right pad-rgt">
                <a href="http://hermosilloonline.com" target="_blank"> by Hermosillo Online</a>
            </div>
            <p class="pad-lft">&#0169; @DateTime.Now.Year <a href="#" target="_blank">  NDO Digital</a></p>
        </footer>
        <!--===================================================-->
        <!-- END FOOTER -->
        <!-- SCROLL PAGE BUTTON -->
        <!--===================================================-->
        <button class="scroll-top btn">
            <i class="pci-chevron chevron-up"></i>
        </button>
        <!--===================================================-->
        <img id="SessionAlive" class="hidden" src="~/Content/images/dot.png">
    </div>
    <script type="text/javascript">
        var rootPath = '@rootPath';
        var isReadOnly = '@ViewBag.IsReadOnly' == 'True' ? true : false;
        console.log('isReadOnly:' + isReadOnly);
    </script>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
